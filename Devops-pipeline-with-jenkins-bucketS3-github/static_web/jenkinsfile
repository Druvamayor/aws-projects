pipeline {
    agent any

    stages {
        stage('Deploy to AWS S3 bucket') {
            steps {             
                withAWS(region:'us-east-1', credentials:'jenkins-user-credentials-for-aws-s3') {
                    sh 'echo "Uploading content with AWS credentials"'
                    s3Upload( acl: 'PublicReadWrite', bucket: 'veggycommons.com', cacheControl: '', excludePathPattern: '', file: 'hello.txt', includePathPattern: '', metadatas: [''], path: 'veggycommons.com/', pathStyleAccessEnabled: true, payloadSigningEnabled: true, redirectLocation: '', sseAlgorithm: '', tags: '', text: '', workingDir: '')
                  }
        }
    }

    post {
        success {
            echo 'Website deployed successfully to AWS S3!'
        }
        failure {
            echo 'Failed to deploy website to AWS S3'
        }
    }
}
