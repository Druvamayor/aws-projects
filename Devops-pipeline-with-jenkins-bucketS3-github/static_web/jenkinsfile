pipeline {
    agent any

    environment {
        // Define AWS credentials from Jenkins credentials store
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ACCESS_KEY_ID = credentials('AKIATSOC6NCRRFPSFYGT')
        AWS_SECRET_ACCESS_KEY = credentials('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')
    }

    stages {
        stage('Clone Repository to Jenkins Workspace') {
            steps {
                // Checkout the GitHub repository containing the HTML website
                git 'https://github.com/Druvamayor/aws-projects.git'
            }
        }

        stage('Deploy to AWS S3') {
            steps {
                // Use the AWS Steps Plugin to publish to S3
                withAWS(region: AWS_DEFAULT_REGION, credentials: 'jenkins-user-credentials-for-aws-s3') {
                    s3Upload(bucket: 'veggycommons.com', path: 'deploywebstatictoawsbucket/*')
                }
            }
        }
    }

    post {
        success {
            echo 'Website deployed successfully to AWS S3!'
        }
        failure {
            echo 'Failed to deploy website to AWS S3'
        }
    }
}
