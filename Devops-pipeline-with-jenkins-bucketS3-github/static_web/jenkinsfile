pipeline {
    agent any

    stages {
        stage('Deploy to AWS S3 bucket') {
            steps {
                // Use the AWS Steps Plugin to publish to S3
              
                //withAWS(credentials: 'jenkins-user-credentials-for-aws-s3', region: 'us-east-1') {
                //s3Upload acl: 'PublicRead', bucket: 'veggycommons.com', cacheControl: '', excludePathPattern: '', file: '**/*', includePathPattern: '', metadatas: [''], redirectLocation: '', sseAlgorithm: '', tags: '', text: '', workingDir: ''
                  sh "aws configure set region $AWS_DEFAULT_REGION" 
                  sh "aws configure set aws_access_key_id $AWS_ACCESS_KEY_ID"  
                  sh "aws configure set aws_secret_access_key $AWS_SECRET_ACCESS_KEY"
                  sh "aws s3 cp aws-projects/Devops-pipeline-with-jenkins-bucketS3-github/static_web/index.html s3://veggycommons.com"

                }
            }
        }
    }

    post {
        success {
            echo 'Website deployed successfully to AWS S3!'
        }
        failure {
            echo 'Failed to deploy website to AWS S3'
        }
    }
}
