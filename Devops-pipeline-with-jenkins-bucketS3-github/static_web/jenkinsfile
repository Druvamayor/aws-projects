pipeline {
    agent any

    stages {
        stage('Deploy to AWS S3 bucket') {
            steps {
                // Use the AWS Steps Plugin to publish to S3
              
                withAWS(credentials: 'jenkins-user-credentials-for-aws-s3', region: 'us-east-1') {
                s3Upload acl: 'PublicRead', bucket: 'veggycommons.com', cacheControl: '', excludePathPattern: '', file: '**/*', includePathPattern: '', metadatas: [''], pathStyleAccessEnabled: true, payloadSigningEnabled: true, redirectLocation: '', sseAlgorithm: '', tags: '', text: '', workingDir: ''

                }
            }
        }
    }

    post {
        success {
            echo 'Website deployed successfully to AWS S3!'
        }
        failure {
            echo 'Failed to deploy website to AWS S3'
        }
    }
}
