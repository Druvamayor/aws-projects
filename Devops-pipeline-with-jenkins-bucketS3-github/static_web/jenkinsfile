pipeline {
    agent any

    stages {
        stage('Clone Repository to Jenkins Workspace') {
            steps {
                // Checkout the GitHub repository containing the HTML website
                git branch: 'main', url: 'https://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@github.com/Druvamayor/aws-projects.git'
            }
        }

        stage('Deploy to AWS S3 bucket') {
            steps {
                // Use the AWS Steps Plugin to publish to S3
                withAWS(credentials: 'jenkins-user-credentials-for-aws-s3', region: 'us-east-1') {
                s3Upload( acl: '', bucket: 'veggycommons.com', cacheControl: '', excludePathPattern: 'jenkinsfile', file: 'static_web', includePathPattern: '', metadatas: [''], path: 'static_web/*', pathStyleAccessEnabled: true, payloadSigningEnabled: true, redirectLocation: '', sseAlgorithm: '', tags: '', text: '', workingDir: 'static_web')

                }
            }
        }
    }

    post {
        success {
            echo 'Website deployed successfully to AWS S3!'
        }
        failure {
            echo 'Failed to deploy website to AWS S3'
        }
    }
}
