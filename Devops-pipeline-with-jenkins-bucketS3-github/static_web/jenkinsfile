pipeline {
    agent any

    stages {
        stage('Testing Aws credentials') {
            steps {             
                withAWS(credentials: 'jenkins-user-credentials-for-aws-s3', region: 'us-east-1'){
                    sh 'echo "Hello DevOps" > hello.txt'
                    s3Upload (acl: 'PublicReadWrite' , bucket: 'veggycommons.com' , file: 'hello.txt')
                    //s3Download(file:'downloaded.txt', bucket:'your-bucket-name', path:'hello.txt',force:true) 
                    //sh "cat downloaded.txt"

                }
        }
    }

    post {
        success {
            echo 'Website deployed successfully to AWS S3!'
        }
        failure {
            echo 'Failed to deploy website to AWS S3'
        }
    }
}
