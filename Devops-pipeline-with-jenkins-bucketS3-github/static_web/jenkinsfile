pipeline {
    agent any

    stages {
        stage('Deploy to AWS S3 bucket') {
            steps {
                // Use the AWS Steps Plugin to publish to S3
              
                withAWS(credentials: 'jenkins-user-credentials-for-aws-s3', region: 'us-east-1') {
                s3Upload(pathStyleAccessEnabled: true, payloadSigningEnabled: true, file:'../../static_web', bucket:'veggycommons.com', path:'/var/lib/jenkins/workspace/deploywebstatictoawsbucket/aws-projects/Devops-pipeline-with-jenkins-bucketS3-github/static_web/')
                //sh "aws s3 cp -r ../../aws-projects/Devops-pipeline-with-jenkins-bucketS3-github/static_web s3://veggycommons.com"

                }
            }
        }
    }

    post {
        success {
            echo 'Website deployed successfully to AWS S3!'
        }
        failure {
            echo 'Failed to deploy website to AWS S3'
        }
    }
}
